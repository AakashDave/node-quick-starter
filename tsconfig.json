{
  "include": ["bin/**/*", "utils/**/*", "enums/**/*"],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "allowJs": false,       
    "checkJs": false,       
    "declaration": true,    
    "emitDeclarationOnly": false,  
    "outDir": "dist",       
    "declarationMap": true, 
    "strict": true,         
    "esModuleInterop": true,
    "moduleResolution": "Node",  
    "target": "ESNext",    
    "module": "ESNext"    
  }
}
